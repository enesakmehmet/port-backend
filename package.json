{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Portfolio backend with Express, Prisma, PostgreSQL",
  "main": "dist/api/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npx prisma generate && tsc",
    "start": "node dist/src/server.js",
    "vercel-build": "npm run prisma:generate && npm run build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts"
  },
  "engines": {
    "node": "22.x"
  },
  "keywords": [],
  "author": "Enes Akmehmet",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@vercel/node": "^5.4.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "prisma": "^6.16.3",
    "useragent": "^2.3.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.2",
    "@types/nodemailer": "^7.0.2",
    "@types/useragent": "^2.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "vercel": {
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "dist",
    "installCommand": "npm install",
    "framework": null
  }
}
